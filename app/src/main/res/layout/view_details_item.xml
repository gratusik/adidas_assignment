    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/search_layout"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/height_40dp"
        android:background="@drawable/view_details_background"
        android:clickable="true"
        android:elevation="@dimen/elevation_8dp"
        android:focusable="true"
        android:padding="@dimen/padding_8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_20dp"
            android:background="?selectableItemBackgroundBorderless"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/view_details_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:text="@string/view_details"
                android:textColor="?attr/reviewText"
                android:textSize="@dimen/text_size_12sp" />

            <ImageView
                android:id="@+id/view_details_icon_image"
                android:layout_width="@dimen/width_20dp"
                android:layout_height="@dimen/height_20dp"
                android:layout_gravity="end"
                android:layout_marginStart="@dimen/margin_8dp"
                android:layout_marginEnd="@dimen/margin_8dp"
                android:layout_weight="0"
                android:contentDescription="@string/view_details_icon"
                android:src="@drawable/ic_next_icon"
                android:scaleType="fitXY"/>
        </LinearLayout>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>