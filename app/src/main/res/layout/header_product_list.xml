    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/header_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:id="@+id/view_left"
            android:layout_width="@dimen/width_150dp"
            android:layout_height="@dimen/height_50dp"
            android:background="@color/white"
            app:layout_constraintHorizontal_chainStyle="spread"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/view_right"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/view_right"
            android:layout_width="@dimen/width_0dp"
            android:layout_height="@dimen/height_50dp"
            android:background="@drawable/header_background"
            app:layout_constraintLeft_toRightOf="@+id/view_left"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/logo_image"
            android:layout_width="@dimen/height_50dp"
            android:layout_height="@dimen/height_50dp"
            android:layout_marginBottom="@dimen/margin_24dp"
            android:contentDescription="@string/logo"
            android:scaleType="centerInside"
            android:src="@drawable/adidas_logo_light_blue"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>